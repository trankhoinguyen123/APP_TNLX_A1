<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Thi.View.DanhSachDeThi">

    <LinearLayout
        android:id="@+id/layout_DeThi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40B6EC"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#40B6EC"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/txt_Tieude_App"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Danh Sách Đề Thi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <GridView
        android:id="@+id/danh_sach_de_thi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></GridView>

</androidx.constraintlayout.widget.ConstraintLayout>