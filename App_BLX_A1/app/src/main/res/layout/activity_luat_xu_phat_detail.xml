<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        tools:context=".LuatXuPhat.View.LuatXuPhatDetailActivity">
        <TextView
            android:id="@+id/txt_Tieude_App"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Luật giao thông đường bộ"
            android:background="#40B6EC"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:text="Hành vi" />

        <TextView
            android:id="@+id/txtNguoiDieuKhienDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginVertical="2dp"
            android:textSize="17sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtMoTaHanhViDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginVertical="2dp"
            android:textSize="17sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtMucPhatDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginVertical="2dp"
            android:textSize="17sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtPhatBoSungDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:layout_marginVertical="2dp"
            android:textSize="17sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtHanhViHopNhatDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hành vi hợp nhất"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hanhViHopNhatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/peri"
            />

        <TextView
            android:id="@+id/txtHanhViLienQuanDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hành vi liên quan"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hanhViLienQuanRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/peri"
            />


    </LinearLayout>
</ScrollView>
