<!-- item_lich_su_thi.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtThoiGianThi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian thi: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtSoCauDung1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số câu đúng: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtSoCauSai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số câu sai: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtTongDiem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng điểm: "
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txtTenDeThi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đề : "
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>
