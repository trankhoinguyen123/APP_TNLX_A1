<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LuatXuPhat.View.DanhSachXuPhatHanhViActivity">
    <TextView
        android:id="@+id/txt_Tieude_App"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Luật giao thông đường bộ"
        android:background="#40B6EC"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="10dp"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewDanhSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_view_bg"
        app:queryHint="Tìm kiếm"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:iconifiedByDefault="false"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHanhVi"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>